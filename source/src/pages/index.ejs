<%- include('../layout/header.ejs', { page: 'main' }) %>
  <section class="people">
    <div class="wrapper">
      <h1 class="title people__title">Клиенты</h1>
      <div class="people__table">
        <div class="people__table-header people__table-id">
          <span class="people__table-button" data-sort="id">
            ID
            <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.49691e-07 4L0.705 4.705L3.5 1.915L3.5 8L4.5 8L4.5 1.915L7.29 4.71L8 4L4 -3.49691e-07L3.49691e-07 4Z" fill="#9873FF"/>
            </svg>
          </span>
        </div>
        <div class="people__table-header">
          <span class="people__table-button" data-sort="fio">
            Фамилия Имя Отчество
            <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.49691e-07 4L0.705 4.705L3.5 1.915L3.5 8L4.5 8L4.5 1.915L7.29 4.71L8 4L4 -3.49691e-07L3.49691e-07 4Z" fill="#9873FF"/>
            </svg>
          </span>
        </div>
        <div class="people__table-header">
          <span class="people__table-button" data-sort="create">
            Дата и время создания
            <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.49691e-07 4L0.705 4.705L3.5 1.915L3.5 8L4.5 8L4.5 1.915L7.29 4.71L8 4L4 -3.49691e-07L3.49691e-07 4Z" fill="#9873FF"/>
            </svg>
          </span>
        </div>
        <div class="people__table-header">
          <span class="people__table-button" data-sort="update">
            Последние изменения
            <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3.49691e-07 4L0.705 4.705L3.5 1.915L3.5 8L4.5 8L4.5 1.915L7.29 4.71L8 4L4 -3.49691e-07L3.49691e-07 4Z" fill="#9873FF"/>
            </svg>
          </span>
        </div>
        <div class="people__table-header">Контакты</div>
        <div class="people__table-header">Действия</div>
        <div class="people__table-preloader">
          <div class="loader">
            <svg class="loader__circle">
              <circle r="45" cx="50" cy="50">
            </svg>
          </div>
        </div>
      </div>
      <button class="button people__add" id="people__add" disabled>
        <svg width="23" height="16" viewBox="0 0 23 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M14.5 8C16.71 8 18.5 6.21 18.5 4C18.5 1.79 16.71 0 14.5 0C12.29 0 10.5 1.79 10.5 4C10.5 6.21 12.29 8 14.5 8ZM5.5 6V3H3.5V6H0.5V8H3.5V11H5.5V8H8.5V6H5.5ZM14.5 10C11.83 10 6.5 11.34 6.5 14V16H22.5V14C22.5 11.34 17.17 10 14.5 10Z" fill="#9873FF"/>
        </svg>      
        Добавить клиента
      </button>
    </div>
  </section>
  <div id="modal" class="modal">
    <div class="modal__wrap">
      <div class="modal__close">
        <span class="modal__close-line"></span>
        <span class="modal__close-line"></span>
      </div>
      <div class="modal__content">
        
      </div>
    </div>
  </div>
  <template id="form-surname">
    <div class="modal__input-wrapp req-input">
      <input class="modal__input" placeholder=" " name="surname">
      <label class="modal__input-label">Фамилия</label>
    </div>
  </template>
  <template id="form-name">
    <div class="modal__input-wrapp req-input">
      <input class="modal__input" placeholder=" " name="name">
      <label class="modal__input-label">Имя</label>
    </div>
  </template>
  <template id="form-lastname">
    <div class="modal__input-wrapp">
      <input class="modal__input" placeholder=" " name="lastname">
      <label class="modal__input-label">Отчество</label>
    </div>
  </template>
  <template id="title">
    <h2 class="modal__title"></h2>
  </template>
  <template id="cancel">
    <button class="button-light cancel" type="button">Отмена</button>
  </template>
  <template id="save">
    <button class="button-bg save" type="button">Сохранить</button>
  </template>
  <template id="remove">
    <button class="button-bg remove" type="button">Удалить</button>
  </template>
  <template id="addContact">   
